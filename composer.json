{
    "name": "ghijk/donation-checkout",
    "license": "proprietary",
    "version": "2.0.0",
    "authors": [
        {
            "name": "Steven Grant",
            "email": "steven@ghijk.co.uk",
            "role": "Developer"
        }
    ],
    "keywords": [
        "ghijk",
        "donation-checkout",
        "statamic",
        "stripe checkout"
    ],
    "autoload": {
        "psr-4": {
            "Ghijk\\DonationCheckout\\": "src"
        }
    },
    "extra": {
        "statamic": {
            "name": "Donation Checkout",
            "description": "Statamic addon for accepting variable single and recurring donations via Stripe Checkout.",
            "editions": ["pro"]
        },
        "laravel": {
            "providers": [
                "Ghijk\\DonationCheckout\\ServiceProvider"
            ]
        }
    },
    "require": {
        "php": "^8.3",
        "statamic/cms": "^6.0",
        "stripe/stripe-php": "^10.0 || ^11.0 || ^12.0 || ^13.0 || ^14.0 || ^15.0 || ^16.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "pestphp/pest": "^3.0",
        "spatie/ray": "^1.41"
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
